---
import Headline from '~/components/ui/Headline.astro';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

const {
  title,
  subtitle,
  tagline,
  actions,
} = Astro.props;

---

 <div
  class="max-w-3xl mt-20 myb-2 mx-auto text-center p-6 rounded-md shadow-xl dark:shadow-none dark:border dark:border-slate-600 bg-white"
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'mb-0 md:mb-0',
      title: 'text-4xl md:text-4xl font-bold tracking-tighter mb-4 font-heading dark:text-black',
      subtitle: 'text-xl text-muted dark:text-black',
      tagline: 'dark:text-black',
    }}
  />
  {
    actions && (
      <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 mt-6">
        {Array.isArray(actions) ? (
          actions.map(({ image: { alt, src, } = {}, ...action }) => (
            <div class="flex w-full sm:w-auto">
              <Button {...(action || {})} class="w-full sm:mb-0">
                <Image src={src} alt={alt} width={200} />
              </Button>
            </div>
          ))
        ) : (
          <Fragment set:html={actions} />
        )}
      </div>
    )
  }
</div>
