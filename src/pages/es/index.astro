---
import { getHomePermalink } from '~/utils/permalinks';
import { getPageData } from '~/utils/utils';
import Layout from '~/layouts/PageLayout.astro';
import HomePage from '~/components/pages/Home.astro';

const pageName = 'index';
const homeLink = getHomePermalink(Astro.currentLocale);
const { layoutProps, pageProps } = await getPageData(Astro.currentLocale, pageName, Astro.url);
---
<Layout {...layoutProps} homeLink={homeLink}>
    <Fragment slot="announcement"></Fragment>
    <HomePage {...pageProps} homeLink={homeLink}/>
</Layout>
